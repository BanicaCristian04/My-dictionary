<Window x:Class="Dictionary.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dictionary"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" Closed="Login_Closed"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <StackPanel Margin="20,20,20,20" Grid.ColumnSpan="2">
            <TextBlock Text="Username:"/>
            <TextBox x:Name="usernameTextBox" Margin="0,5"/>

            <TextBlock Text="Password:" Margin="0,10"/>
            <PasswordBox x:Name="passwordBox" Margin="0,5"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="0,5"/>

        </StackPanel>
    </Grid>
</Window>
